<div id="www">
	<div class="container">

		<div class="row">
			<div class="col-lg-6 col-lg-offset-3 centered">
				<h3>CONTACT</h3>
			</div>
		</div>

		<div class="row mt">
			<div class="col-lg-8 col-lg-offset-2">
				{{if .success}}
					<p>Message was sent!</p>
				{{end}}

				<form role="form" method="POST" action="/contact/send">
				  <div class="form-group">
				    <input name="name" type="name" class="form-control" id="NameInputEmail1" placeholder="Name"><br/>
				  </div>
				  <div class="form-group">
				    <input name="email" type="email" class="form-control" id="exampleInputEmail1" placeholder="E-mail"><br/>
				  </div>
				  <textarea name="message" class="form-control" rows="6" placeholder="Message"></textarea><br/>
				  <button type="submit" class="btn btn-success">Send message</button>
				</form>
			</div>
		</div>

	</div>
</div>
